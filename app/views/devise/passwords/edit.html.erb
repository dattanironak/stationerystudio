<div id="auth_form">
 <div class="wrapper">
<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field input-box">
    <%= f.password_field :password, autofocus: true, placeholder: "Enter passsword", autocomplete: "new-password", pattern: "(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{8,}", required: true %>
  </div>

  <div class="field input-box">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password", pattern: "(?=.*[a-z])(?=.*[A-Z])(?=.*[!@#$%^&*]).{8,}", required: true %>
</div>
  <div class="actions input-box button">
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>